class Sys {
    function void init() {
        // Classes without init():
        // - Array
        // - String
        // - Sys.init() is called by bootstrap

        do Memory.init();
        do Math.init();
        do Output.init();
        do Screen.init();
        do Keyboard.init();

        // Extensions:
        // do Paging.init();
        // do Process.init();
        do Disk.init();
        // do Filesystem.init();

        // Let's go to userland!
        return;
    }

    function void halt() {
        while(true) {}
        return;
    }

    function void wait(int duration) {
        var int i,j;

        let i=0;
        while(i<duration) {
            let j=0;
            while (j<200) {
                let j=j+1;
            }
            let i=i+1;
        }

        return;
    }

    function void error(int errorCode) {
        do Output.printString("ERR");
        do Output.printInt(errorCode);
        return;
    }
}
